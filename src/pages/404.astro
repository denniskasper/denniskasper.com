---
import Layout from '@layouts/layout.astro'
---

<Layout title="404 | Dennis Kasper">
  <div class="flex flex-col items-center justify-center pt-24 md:pt-32 text-center">
    <p class="font-display text-8xl md:text-9xl font-bold text-accent/20 mb-4 animate-fade-up stagger-1">404</p>
    <p class="text-lg text-muted-light dark:text-muted-dark mb-8 animate-fade-up stagger-2">
      This page drifted away.
    </p>
    <a
      href="/"
      class="text-sm font-medium tracking-wide uppercase text-accent hover:text-accent-muted transition-colors duration-300 animate-fade-up stagger-3"
    >
      Back to shore
    </a>
  </div>
</Layout>
