---
import NavLink from '@components/nav-link.astro'
import NavSocial from '@components/nav-social.astro'

export interface Props {
  title?: string
  frontmatter?: {
    title?: string
  }
}

const { title } = Astro.props as Props
const pageTitle = title || Astro.props.frontmatter?.title

const year = new Date().getFullYear()
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      rel="icon"
      href="/favicon.svg"
      type="image/svg+xml"
    />
    <title>{pageTitle}</title>
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Source+Sans+3:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="/styles/global.css"
    />
  </head>
  <body class="bg-light dark:bg-dark text-dark dark:text-light font-body text-base leading-relaxed antialiased">
    <div class="min-h-screen flex flex-col">
      <main class="w-full max-w-3xl mx-auto px-6 md:px-8 flex-1">
        <header class="flex items-center justify-between pt-10 pb-16 md:pt-14 md:pb-20 animate-fade-in">
          <nav class="flex items-center gap-x-8">
            <NavLink
              title="home"
              url="/"
            />
            <NavLink
              title="resume"
              url="/resume/"
            />
          </nav>
          <nav class="flex items-center gap-x-3">
            <NavSocial
              icon="github"
              link="https://github.com/denniskasper"
            />
            <NavSocial
              icon="linkedin"
              link="https://www.linkedin.com/in/dennis-kasper-995b2112b"
            />
            <button
              data-icon-btn
              class="ml-3 p-1.5 rounded-full hover:bg-dark/5 dark:hover:bg-light/5 transition-colors duration-300 cursor-pointer"
              aria-label="Toggle theme"
            >
              <img
                data-icon
                src="/icons/moon.svg"
                alt="Toggle theme"
                class="h-5 w-5"
              />
            </button>
          </nav>
        </header>
        <article>
          <slot />
        </article>
      </main>

      <footer class="w-full max-w-3xl mx-auto px-6 md:px-8 py-12 mt-20">
        <div class="flex items-center justify-between text-sm text-muted-light dark:text-muted-dark">
          <span>&copy; {year} Dennis Kasper</span>
          <span class="flex items-center gap-1.5">
            made with <span class="text-red-500">&#10084;</span>
          </span>
        </div>
      </footer>

      <div
        data-banner
        class="fixed bottom-0 left-0 right-0 z-50 hidden"
      >
        <div class="max-w-3xl mx-auto px-6 md:px-8 pb-6">
          <div class="bg-surface-light dark:bg-surface-dark border border-dark/10 dark:border-light/10 rounded-xl px-6 py-5 shadow-lg backdrop-blur-sm">
            <p class="text-sm mb-4 text-muted-light dark:text-muted-dark">
              This site uses local storage to remember your theme preference.
            </p>
            <div class="flex gap-3">
              <button
                data-acceptButton
                class="px-4 py-2 text-sm font-medium bg-accent text-dark rounded-lg hover:bg-accent-muted transition-colors duration-300 cursor-pointer"
              >
                Accept
              </button>
              <button
                data-declineButton
                class="px-4 py-2 text-sm font-medium text-muted-light dark:text-muted-dark hover:text-dark dark:hover:text-light rounded-lg transition-colors duration-300 cursor-pointer"
              >
                Decline
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const localStorageAccept = 'denniskasper.com-storageAccepted'
      const localStorageTheme = 'denniskasper.com-theme'

      const iconSunSource = '/icons/sun.svg'

      let currentTheme = 'light'

      const banner = document.querySelector('[data-banner]') as HTMLDialogElement
      const acceptButton = document.querySelector('[data-acceptButton]') as HTMLButtonElement
      const declineButton = document.querySelector('[data-declineButton]') as HTMLButtonElement
      const icon = document.querySelector('[data-icon]') as HTMLImageElement

      const storageAccepted = localStorage.getItem(localStorageAccept)

      if (storageAccepted === null) {
        banner.style.display = 'block'
      }

      if (storageAccepted === 'false') {
        banner.style.display = 'none'
      }

      acceptButton.addEventListener('click', () => {
        localStorage.setItem(localStorageAccept, 'true')
        banner.style.display = 'none'

        localStorage.setItem(localStorageTheme, currentTheme)
      })

      declineButton.addEventListener('click', () => {
        banner.style.display = 'none'
        localStorage.setItem(localStorageAccept, 'false')
      })

      const locaStorageTheme = localStorage.getItem(localStorageTheme)

      if (locaStorageTheme === 'dark') {
        document.documentElement.classList.add('dark')
        icon.src = iconSunSource
        currentTheme = 'dark'
      }

      icon?.addEventListener('click', () => {
        document.documentElement.classList.toggle('dark')

        const storageAccepted = localStorage.getItem(localStorageAccept)

        if (document.documentElement.classList.contains('dark')) {
          icon.src = iconSunSource
          currentTheme = 'dark'

          if (storageAccepted === 'true') {
            localStorage.setItem(localStorageTheme, 'dark')
          }
        } else {
          icon.src = '/icons/moon.svg'
          currentTheme = 'light'

          if (storageAccepted === 'true') {
            localStorage.setItem(localStorageTheme, 'light')
          }
        }
      })
    })
  </script>
</html>
