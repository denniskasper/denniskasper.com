---
const { icon, link } = Astro.props
---

<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="group p-1.5 rounded-full hover:bg-dark/5 dark:hover:bg-light/5 transition-colors duration-300"
>
  <img
    src={`/icons/${icon}.svg`}
    alt={icon}
    class="h-5 w-5 cursor-pointer opacity-50 group-hover:opacity-100 transition-opacity duration-300 dark:invert"
  />
</a>
